<%- include('layout/header', { title: '微博 - 404', isNav: true })%>

    <h1 style="border-bottom: 1px solid #ccc; padding-bottom: 10px;">删除数据</h1>
    <div>
        <table>
            <tr><td>id</td><td>:</td><td><input id="pid"></td><td><button id="btn-getinfo">获取数据</button></td></tr>
            <tr><td>account</td><td>:</td><td><input id="account"></td></tr>  
            <tr><td>password</td><td>:</td><td><input id="password"></td></tr>
            <tr><td>mark</td><td>:</td><td><input id="mark"></td></tr>
            <tr><td>typeId</td><td>:</td><td><input id="typeId"></td></tr> 
            <tr><td></td><td></td><td><button id="btn-create">删除</button></td></tr>
        </table>
    </div>

    <script>
        // 发送 post 请求
        function post(url, data = {}) {
            return $.ajax({
                type: 'post',
                url:url,
                data: JSON.stringify(data),
                contentType: "application/json",
            })
        }

        // 获取 dom 元素
        $btnCreate = $('#btn-create')
        $btnGetInfo = $('#btn-getinfo')

        // 根据pid获取数据
        $btnGetInfo.click(() => {
            $old_id = $('#pid').val()


            if ($old_id === '') {
                alert('id不能为空')
                return
            }

            //获取数据
            const url = '/api/account/list'
            const data = {
                "id": $old_id
            }

            post(url, data).then(res => {
                if (res.errno !== 0) {
                    alert(res.message)
                    return
                }
                
                
                $('#password').val(res.data[0].password)
                $('#account').val(res.data[0].account)
                $('#mark').val(res.data[0].mark)
                $('#typeId').val(res.data[0].typeId)

                //打印信息  
            })
        })

        // 提交数据
        $btnCreate.click(() => {
            $pid = $('#pid').val()

            if ($pid === '') {
                alert('pid不能为空')
                return
            }

            const url = '/api/account/delete'
            const data = {
                "id":$pid
            }
            
            post(url, data).then(res => {
                if (res.errno !== 0) {
                    alert('操作错误')
                    return
                }
                alert('删除成功')
                //location.href = '/admin.html'
            })
        })

    </script>
